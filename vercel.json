{
  "buildCommand": "pnpm build",
  "outputDirectory": "docs/.vuepress/dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": null,
  "nodeVersion": "22.x",
  "regions": ["hkg1", "sin1"],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).(?:jpg|jpeg|png|gif|webp|svg|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
